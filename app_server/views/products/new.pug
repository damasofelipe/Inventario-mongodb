                    input.form-control(type="number", value=minimo  ,name="minimo", min="0", max="10000", title="Cantidad minima del producto en el almacen" required)
                  .form-group
                    h5  Categoria:  
                    select.form-control.selectpicker(name="categoria", data-live-search="true")
                      for categoria in categorias
