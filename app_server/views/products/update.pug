extends ../layout.pug
block contenido
  #page-wrapper
    .row
      .col-md-4.col-md-offset-4
        .login-panel.panel.panel-default
          .panel-heading
            h3.panel-title Actualizar
          .panel-body
            form(action="/products/"+productoUpdate._id+"?_method=PUT",method="POST")
              fieldset
                .form-group
                  h5  Nombre:
                  input.form-control(type="text",name="nombre",required="required",value=productoUpdate.nombre, pattern="{3,40}$",title="El nombre del producto debe tener un minimo 3 caracteres y 40 como maximo")
                .form-group
                  h5  Codigo de barras:
                  input.form-control(type="text",name="codigo",required="required",value=productoUpdate.codigo, pattern="{3,30}$",title="El nombre de la plaza debe tener un minimo 3 caracteres y 30 como maximo")
                .form-group
                  h5  Descripcion:
                  input.form-control(type="text",name="descripcion",required="required",value=productoUpdate.descripcion, pattern="{3,70}$",title="El nombre de la plaza debe tener un minimo 3 caracteres y 70 como maximo")
                .form-group
                  h5  Categoria:
                  link(href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.10.0/css/bootstrap-select.min.css', rel='stylesheet')
                  select.form-control.selectpicker(name="categoria", data-live-search="true")
                    for categoria in categorias
                      option(name="1") #{categoria.nombre}
                //esto todavia hay que ver los estilos para poner un select en vez de un input
                // boton para registrar
                .form-group
                input(type="submit" value="Actualizar" class="btn btn-lg btn-primary btn-block")
  // jQuery
  script(src='/src/vendor/jquery/jquery.min.js')
  // Bootstrap Core JavaScript
  script(src='/src/vendor/bootstrap/js/bootstrap.min.js')
  // Metis Menu Plugin JavaScript
  script(src='/src/vendor/metisMenu/metisMenu.min.js')
  // Custom Theme JavaScript
  script(src='/src/dist/js/sb-admin-2.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.10.0/js/bootstrap-select.min.js')
