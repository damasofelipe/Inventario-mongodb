extends ../layout.pug
block contenido
  #page-wrapper
    .row
      .col-md-4.col-md-offset-4
        .login-panel.panel.panel-default
          .panel-heading
            h3.panel-title Registrar tecnica
          .panel-body
            form(action="/tecnicas/new",method="POST",role='form')
              fieldset
                .form-group
                  input.form-control(type="text", name="name", placeholder="Nombre",pattern="{1,40}$", title="El nombre debe tener un maximo de 40 caracteres" required)
                .form-group
                  input.form-control(type="text", name="last_name", placeholder="Apellido",pattern="{1,40}$", title="El apellido debe tener un maximo de 40 caracteres" required)
                if usuario.permisos == 2
                  .form-group
                    select.form-control.selectpicker(name="plaza", data-live-search="true")
                      for sucursal in sucursales
                        option(name="1") #{sucursal.plaza}

                // boton para registrar
                .form-group
                input(type="submit" value="Registrar" class="btn btn-lg btn-primary btn-block")
  // jQuery
  script(src='/src/vendor/jquery/jquery.min.js')
  // Bootstrap Core JavaScript
  script(src='/src/vendor/bootstrap/js/bootstrap.min.js')
  // Metis Menu Plugin JavaScript
  script(src='/src/vendor/metisMenu/metisMenu.min.js')
  // Custom Theme JavaScript
  script(src='/src/dist/js/sb-admin-2.js')
  script(src='/src/dist/js/bootstrap-select.min.js')
