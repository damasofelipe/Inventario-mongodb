extends ../layout.pug
block contenido

  #page-wrapper
    .row
      .col-lg-12
        h3.page-header Lista de tecnicas
    .row
      .col-lg-12
        .panel.panel-default
          .panel-heading
            | Tecnicas
          .panel-body
            table#dataTables-example.table.table-striped.table-bordered.table-hover
              thead
                tr
                  th Nombres
                  th Apellidos
                  if usuario.permisos == 2
                    th Sucursal
                  th Acci√≥n
              tbody
                if usuario.permisos == 2
                  for tecnica in tecnicas
                    tr.odd.gradeX
                      td #{tecnica.nombre}
                      td #{tecnica.apellido}
                      td #{tecnica.sucursal.plaza}
                      td
                        a(class="btn btn btn-primary btn-circle" href="/tecnicas/"+tecnica._id)
                          i.fa.fa-list(title="Editar")

                else

                  for tecnica in tecnicas
                    tr.odd.gradeX
                      td #{tecnica.nombre}
                      td #{tecnica.apellido}
                      td
                        a(class="btn btn btn-primary btn-circle" href="/tecnicas/"+tecnica._id)
                          i.fa.fa-list(title="Editar")
